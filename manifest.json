{
  "manifest_version": 3,
  "name": "Manga Book",
  "version": "1.0",
  "description": "Find out the chapter you stopped at and the website you were reading on.",
  "action": {
    "default_popup": "src/index.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "src/js/engine.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"]
    }
  ]
}
